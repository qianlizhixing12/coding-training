{
  // 有关 tasks.json 格式的文档，请参见
  // https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "c-compile",
      "command": "gcc",
      "args": [
        "-std=c99",
        "${file}",
        // "${fileDirname}/1.c",
        // "${fileDirname}/core/elr_error.c",
        // "${fileDirname}/struct/elr_hash.c",
        "-g",
        // "-l",
        // "glib-2.0",
        // "-I",
        // "${fileDirname}/struct",
        // "-I",
        // "${fileDirname}/core",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "cpp-compile",
      "command": "g++",
      "args": [
        "${file}",
        "-g",
        "-std=c++11",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    }
  ]
}